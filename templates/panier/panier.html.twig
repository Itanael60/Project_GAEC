{% extends 'base.html.twig' %}

{% block title %}Hello !{% endblock %}





{% block body %}

<div class="container">
	<table id="cart" class="table table-hover table-condensed">
        <thead>
            <tr>
                <th style="width:50%">Produit</th>
                <th style="width:10%">Prix</th>
                <th style="width:8%">Quantité</th>
                <th style="width:22%" class="text-center">Sous-total</th>
                <th style="width:10%"></th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td data-th="Produit">
                    <div class="row">
                        <div class="col-sm-2 hidden-xs"><img src="http://placehold.it/100x100" alt="..." class="img-responsive"/></div>
                        <div class="col-sm-10">
                            <h4 class="nomargin">{{produit.produit}}</h4>
                            <p>{{produit.detail}}</p>
                        </div>
                    </div>
                </td>
                <td data-th="Prix"> {{produit.prixHT}} €</td>
                <td data-th="Quantite">
                    <input type="number" class="form-control text-center" value="{{produit.qte}}">
                </td>
                <td data-th="Sous-total" class="text-center">{% set sousTotal = 0 %}{% set sousTotal = produit.prixHT * produit.qte %} {{sousTotal}}</td>
                <td class="actions" data-th="">
                    <a href="{{path('panier')}}"><button class="btn btn-info btn-sm"><i class="fas fa-sync-alt"></i></button></a>
                    <a href="{{path('supprimer', {'id':produit.id})}}"><button class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></button></a>						
                </td>
            </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            {% set prixTotal = 0 %} 
                {% for produit in produits %}
                {% set prixTotal = (produit.prixHT * produit.qte) + prixTotal %}
            {% endfor %}
            <tr>
                <td><a href="{{path('produits')}}" class="btn btn-warning"><i class="fa fa-angle-left"></i> Continuer les achats</a></td>
                <td colspan="2" class="hidden-xs"></td>
                <td class="hidden-xs text-center"><strong> Total  {{prixTotal}} €</strong></td>
                <td><a href="#" class="btn btn-success btn-block">Valider <i class="fa fa-angle-right"></i></a></td>
            </tr>
        </tfoot>
    </table>
</div>

{% endblock %}
