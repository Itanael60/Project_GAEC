{% extends 'base.html.twig' %}
{% block title %}Inscription{% endblock %}
{% block body %}  
    <div class="container" id="form_inscription">
        <div class="centrer titre">
            <h2>Créer son compte</h2>
        </div>
        {{ form_start(form) }}
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <label for="username">Pseudo</label>
                    {{ form_widget(form.username)}}
                    {{ form_errors(form.username)}}
                </div>
            </div>     
            <div class="col-6">
                <div class="form-group">    
                    <label for="email">Email</label>
                    {{ form_widget(form.email)}}
                    {{ form_errors(form.email)}}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <label for="username">Nom</label>
                    {{ form_widget(form.nom)}}
                    {{ form_errors(form.nom)}}
                </div>
            </div>     
            <div class="col-6">
                <div class="form-group">    
                    <label for="email">Prénom</label>
                    {{ form_widget(form.prenom)}}
                    {{ form_errors(form.prenom)}}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <label for="username">Adresse</label>
                    {{ form_widget(form.adresse)}}
                    {{ form_errors(form.adresse)}}
                </div>
            </div>     
            <div class="col-6">
                <div class="form-group">    
                    <label for="email">Téléphone</label>
                    {{ form_widget(form.telephone)}}
                    {{ form_errors(form.telephone)}}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <label for="username">Code Postal</label>
                    {{ form_widget(form.cp)}}
                    {{ form_errors(form.cp)}}
                </div>
            </div>     
            <div class="col-6">
                <div class="form-group">    
                    <label for="email">Ville</label>
                    {{ form_widget(form.ville)}}
                    {{ form_errors(form.ville)}}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <label for="username">Mot de passe</label>
                    {{ form_widget(form.password.first)}}
                    {{ form_errors(form.password.first)}}
                </div>
            </div>     
            <div class="col-6">
                <div class="form-group">    
                    <label for="email">Confirmation</label>
                    {{ form_widget(form.password.second)}}
                    {{ form_errors(form.password.second)}}
                </div>
            </div>
        </div>
            <div class="form-group row checkbox-padding">  
                {{ form_widget(form.newsletter, {attr: {class: 'col-lg-10'}}) }}
            </div>
            <div class="form-group row checkbox-padding">  
                {{ form_widget(form.cgu, {attr: {class: 'col-lg-10'}}) }}
                {{ form_errors(form.cgu)}}
            </div>
            <div style= 'text-align:center;'> 
                {{ form_widget(form.enregistrer, {attr: {class: 'btn btn-success', }}) }}
            </div>
        {{ form_end(form) }}
    </div>

