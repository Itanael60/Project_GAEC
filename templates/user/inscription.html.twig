{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 1280px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<header class="align-items-center row">
        <h1 class="col-sm-7">Il était une fois "La ferme de la vieille rue"</h1>
        <nav class="col-sm-5">
            <ul>
                <li><a id="home" href="">Home</a></li>
                <li><a id="inscription" data-toggle="modal" data-target="#user_modal" href="">Inscription</a></li>
            </ul>
        </nav>

</header>


<div class="example-wrapper">

    <div class="modal fade" id="user_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

        {{ form_start(form) }}

        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">

                <div class="modal-body">            
                    
                    <div class="form-group row ">
                        <label for="username" class="col-lg-2">Pseudo</label>
                            {{ form_widget(form.username, {attr: {class: 'col-lg-10'}}) }}
                            
                        
                    </div>

                    <div class="form-group row ">
                        <label for="nom" class="col-lg-2">Nom</label>
                            {{ form_widget(form.nom, {attr: {class: 'col-lg-4'}}) }}
                            {{ form_errors(form.nom, {attr: {class: 'col-lg-10'}}) }}
                        <label for="prenom" class="col-lg-2">Prénom</label>
                            {{ form_widget(form.prenom, {attr: {class: 'col-lg-4'}}) }}
                    </div>

                    <div class="form-group  row">
                        <label for="email" class="col-lg-2">Email</label>
                        {{ form_widget(form.email, {attr: {class: 'col-lg-4'}}) }}
                        {{ form_errors(form.email, {attr: {class: 'col-lg-10'}}) }}
                        <label for="telephone" class="col-lg-2">Téléphone</label>
                        {{ form_widget(form.telephone, {attr: {class: 'col-lg-4'}}) }}
                        {{ form_errors(form.telephone, {attr: {class: 'col-lg-10'}}) }}
                    </div>

                    <div class="form-group row">
                        <label for="adresse" class="col-lg-2">Adresse</label>
                        {{ form_widget(form.adresse, {attr: {class: 'col-lg-10'}}) }}
                    </div>

                    <div class="form-group row ">
                        <label for="cp" class="col-lg-2">Code Postal</label>
                            {{ form_widget(form.cp, {attr: {class: 'col-lg-4'}}) }}
                        <label for="ville" class="col-lg-2">Ville</label>
                            {{ form_widget(form.ville, {attr: {class: 'col-lg-4'}}) }}
                    </div>

                    <div class="form-group row">
                        <label for="password" class="col-lg-2">Mot de passe</label>
                        {{ form_widget(form.password.first, {attr: {class: 'col-lg-4'}}) }}
                        {{ form_errors(form.password.first, {attr: {class: 'col-lg-4'}}) }}
    
                        <label for="confirmPassword" class="col-lg-2">Confirmation</label>
                        {{ form_widget(form.password.second, {attr: {class: 'col-lg-4'}}) }}
                       
                    </div>

                    <div class="form-group row">
                        
                        {{ form_widget(form.password, {attr: {class: 'col-lg-10'}}) }}
                    </div>

                    <div class="form-group row">
                        
                        {{ form_widget(form.newsletter, {attr: {class: 'col-lg-10'}}) }}
                    </div>

                    <div class="form-group row">
                        
                        {{ form_widget(form.enregistrer, {attr: {class: 'col-lg-10'}}) }}
                    </div>

                

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                    <input type="hidden" id="hidden_user_id">
                </div> 
            </div>
        </div>
    </div>
    {{ form_end(form) }}

    
</div>

