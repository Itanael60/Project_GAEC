{% extends 'base.html.twig' %}

{% block title %}Ajouter un produit{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
    <div style="text-align: right">
        <h2 class="titre" id="ajout_produit_titre">Ajouter un nouveau produit</h2>
    </div>
    <br>
    {{ form_start(form) }}
        <div class="row">
            <div class="offset-6 col-6">
                <label for="produit">Nom du produit:</label>
                {{ form_widget(form.produit, {attr: {class: 'col-lg-10'}}) }}
            </div>
        </div>
        <div class="row">
            <div class="offset-6 col-6">
                <label for="detail"> Description:</label>
                {{ form_widget(form.detail, {attr: {class: 'col-lg-10'}}) }}
            </div>
        </div>
        <div class="row">
            <div class="offset-6 col-6">
                <label for="quantite"> Quantité:</label>
                {{ form_widget(form.quantite, {attr: {class: 'col-lg-10', min: '0'}}) }}
            </div>
        </div>
        <div class="row">
            <div class="offset-6 col-6">
                <label for="categorie"> Catégorie:</label>
                {{ form_widget(form.categorie, {attr: {class: 'col-lg-10'}}, select) }}
            </div>
        </div>
        <div class="row">
            <div class="offset-6 col-6">
                <label for="prixHT"> Prix Hors Taxe:</label>
                {{ form_widget(form.prixHT, {attr: {class: 'col-lg-10'}}) }}
            </div>
        </div>
        {# <div>
        <label for="image"> Aperçu de l'image :</label>
        {{ form_widget(form.imageFile) }}
        </div> #}
        <br>
        <div class="row">
            <div class="offset-6 col-6">
                <button class="btn btn-success" type="submit">Enregistrer</button>
            </div>
        </div>
    {{ form_end(form) }}
    <div class="padding2_2"></div>
</div>
{% endblock %}