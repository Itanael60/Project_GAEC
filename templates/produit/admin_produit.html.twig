{% extends 'base.html.twig' %}

{% block title %}Hello !{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    {{ form_start(form) }}
        <div>
        <label for="produit">Nom du produit:</label>
        {{ form_widget(form.produit, {attr: {class: 'col-lg-10'}}) }}
        </div>

        <br>

        <div>
        <label for="detail"> Description:</label>
        {{ form_widget(form.detail, {attr: {class: 'col-lg-10'}}) }}
        </div>

        <div>
        <label for="quantite"> Quantité:</label>
        {{ form_widget(form.quantite, {attr: {class: 'col-lg-10'}}) }}
        </div>

        <div>
        <label for="categorie"> Catégorie:</label>
        {{ form_widget(form.categorie, {attr: {class: 'col-lg-10'}}) }}
        </div>

        <div>
        <label for="prixHT"> Prix Hors Taxe:</label>
        {{ form_widget(form.prixHT, {attr: {class: 'col-lg-10'}}) }}
        </div>

        {# <div>
        <label for="image"> Aperçu de l'image :</label>
        {{ form_widget(form.imageFile) }}
        </div> #}

    

        <button type="submit">Enregistrer</button>
    {{ form_end(form) }}

    
</div>
{% endblock %}
