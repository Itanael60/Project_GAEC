{% extends 'base.html.twig' %}

{% block title %}Hello !{% endblock %}

{% block body %}

<div class="container">

    <div class="card mt-4">
        <img class="card-img-top"  src="{{app.request.basepath}}/uploads/produits/{{produit.image}}" alt="{{produit.produit}}" height="400px" width="300px">
        <div class="card-body">
            <h3 class="card-title">{{ produit.produit }}</h3>
            <h4>{% set prix = produit.prixHT * 1.19 %}</h4>
            <p class="card-text"> {{ produit.detail }}</p>
            <select name="qte">
                {% for i in 1..10 %}
                    <option value="{{ i }}">{{ i }} </option>
                {% endfor %}
            </select>
            <a class="btn btn-warning">Mettre au panier</a>
            
        </div>
    </div>
    <!-- /.card -->
</div>
<!-- /.container -->

 
{% endblock %}
